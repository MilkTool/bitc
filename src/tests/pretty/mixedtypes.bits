bitc version 0.11

module mixed_types is
  import bitc.stdio as stdio
  import bitc.stdlib as stdlib

  boxed struct forward

// The following complains about an inexact match, apparently because no
// FORALL wrapper gets generated by type inference.
//  boxed struct boxedpoly('a)

  unboxed struct onefield is
    a : int32

  unboxed struct simple is
    a : int32
    f : float
    
  unboxed struct poly('a) is
    a : 'a
    f : float
    
  boxed struct boxedpoly('a) is
    a : 'a
    f : float
    
  // This causes an assert (in either syntax) because the
  // ast->tvarLB pointer for the type variable is NULL.
  // I'm guessing this occurs for the same reason that the
  // FORALL never gets built above.
  //
  // where Eq('a)
  // boxed struct constrained('a)

  where Eq('a)
  boxed struct constrained('a) is
    a : 'a
    f : float
    
  boxed struct forward is
    c : char

  //  boxed union uboxedpoly('a)

  boxed union uboxedpoly('a) is
    ucon0
    ucon { a: 'a }
    
  boxed union uforward

  boxed union uforward is
    f
    g { i:int32 }

  // where Eq('a)
  // boxed union uconstrained('a)

  where Eq('a)
  boxed union uconstrained('a) is
    empty
    full { a : 'a }
