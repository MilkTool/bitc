bitc version 0.11
import bitc.main as main
provide bitc.main main

// Check to ensure that unions with one leg that is 
//   -- either a reference type or a nullable type
//   -- and others are enumerations
// are handled correctly.


// Evident Reference type
(union un_ref:unboxed 
  en11 en12 (ptr1 p:(boxed int32)))

// Constrained Reference type
(forall ((RefTypes 'a)) 
  (union (un_ct_ref 'a):unboxed 
    en21 en22 (ptr2 p:'a)))

// Nullable type
(union un_nul:unboxed 
  en31 en32 (ptr3 p:(nullable (boxed int32))))

(def main.main:(fn (vector string) -> int32)
  (lambda (argvec) 
    (let ((n (dup 10)))
      (ptr1 n)
      (ptr2 n)
      (ptr3 (not_null n)) 
      0)))
