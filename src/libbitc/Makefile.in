# @configure_input@

SHELL = /bin/sh

#### Start of system configuration section. ####

srcdir = @srcdir@
top_srcdir = @top_srcdir@

CXX = @CXX@
CC = @CC@
AR = ar
VERSION=@VERSION@
BUILD=@BUILD@
RANLIB=@RANLIB@
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
CFLAGS = @CFLAGS@
CXXFLAGS = @CXXFLAGS@
LDFLAGS = @LDFLAGS@

prefix=@prefix@
exec_prefix=@exec_prefix@
bindir = @bindir@
libdir = @libdir@
includedir = @includedir@
datadir = @datadir@
datarootdir = @datarootdir@

MAKEINFO = makeinfo
TEXI2DVI = texi2dvi

# shap: I have seen autoconf get this consistently wrong, which
# is why the following obscure test is present. Surely there must
# be a better way? I don't like this solution either, as it does not
# work robustly when the user messes with --prefix...

# Where to put the Info files
shareinfodir=$(findstring $(datadir)/info,$(wildcard $(datadir)/*))
infodir = $(if $(shareinfodir),$(shareinfodir),@infodir@)

# Where to put the manual pages.
sharemandir=$(findstring $(datadir)/man,$(wildcard $(datadir)/*))
mandir = $(if $(sharemandir),$(sharemandir),@mandir@)

mkinstalldirs = $(top_srcdir)/mkinstalldirs

#### End of system configuration section. ####

TARGETS=BUILD/libbitc.a BUILD/libbitc.bita BUILD/libbitc-no-gc.a
INC+=-I.
BITCC=@top_srcdir@/compiler/BUILD/bitcc

BITC_SOURCES=\
	$(wildcard *.bits) \
	$(wildcard */*.bits)

BITC_IFS=\
	$(wildcard *.bitc) \
	$(wildcard */*.bitc)

# mkclosure.c is sourced from the appropriate target architecture directory
# by virtue of the VPATH setting below. Contrary to appearences, it is not
# matched by the wildcard.
NOGC_SOURCES=\
	$(wildcard nogc-*.c)

C_SOURCES=\
	$(filter-out $(NOGC_SOURCES),$(wildcard *.c)) \
	mkclosure.c

C_HDR=\
	$(wildcard */*.h)

VPATH=.:@TARGET_ARCH@

RUNTIME_OBJECTS=$(C_SOURCES:%.c=BUILD/%.o)
NOGC_OBJECTS=$(NOGC_SOURCES:%.c=BUILD/%.o)
OBJECTS=$(RUNTIME_OBJECTS) $(NOGC_OBJECTS)

all: $(TARGETS)

BUILD:
	mkdir -p BUILD

$(OBJECTS): BUILD/bitc-runtime.h | BUILD

BUILD/bitc-runtime.h: $(BITC_SOURCES)
	$(BITCC) $(INC) -h -o $@ bitc-runtime.bitc

C_DEP=@$(CC) $(CFLAGS) $(INC) -M -MT $@ -MF $(patsubst %.o,%.m,$@) $<
C_BUILD=$(CC) $(CFLAGS) $(INC) -c $< -o $@
CXX_DEP=@$(CXX) $(CXXFLAGS) $(INC) -M -MT $@ -MF $(patsubst %.o,%.m,$@) $<
CXX_BUILD=$(CXX) $(CXXFLAGS) $(INC) -c $< -o $@

install: all
	$(mkinstalldirs) $(DESTDIR)/$(libdir)
	$(mkinstalldirs) $(DESTDIR)/$(includedir)
	$(INSTALL) -m 0644 BUILD/libbitc.a $(DESTDIR)/$(libdir)
	$(INSTALL) -m 0644 BUILD/libbitc-no-gc.a $(DESTDIR)/$(libdir)
	$(INSTALL) -m 0644 BUILD/libbitc.bita $(DESTDIR)/$(libdir)
	for if in $(BITC_IFS); do \
	  $(INSTALL) -d $(DESTDIR)/$(includedir)/`dirname $$if`; \
	  $(INSTALL) -m 0644 $$if $(DESTDIR)/$(includedir)/`dirname $$if`; \
	done
	for hdr in $(C_HDR); do \
	  $(INSTALL) -d $(DESTDIR)/$(includedir)/`dirname $$hdr`; \
	  $(INSTALL) -m 0644 $$hdr $(DESTDIR)/$(includedir)/`dirname $$hdr`; \
	done

BUILD/libbitc.a: $(RUNTIME_OBJECTS) | BUILD
	ar -crv $@ $(RUNTIME_OBJECTS)

BUILD/libbitc.bita: $(BITC_SOURCES) | BUILD
	$(BITCC) $(INC) -c -o $@ $(BITC_SOURCES)

BUILD/libbitc-no-gc.a: $(NOGC_OBJECTS) | BUILD
	ar -crv $@ $(NOGC_OBJECTS)

BUILD/%.o: %.c | BUILD
	@$(C_DEP)
	$(C_BUILD)

BUILD/%.o: %.cxx | BUILD
	@$(CXX_DEP)
	$(CXX_BUILD)

clean:
	-rm -rf BUILD

DEPFILES=$(wildcard BUILD/*.m)
-include $(DEPFILES)


